/* 全媒体遮罩 */
.qmt_modal-dialog{

  width: 80vw;
  height: 45vh;
  /* overflow: hidden; */
  position: fixed;
  top: 17vh;
  left: 10vw;
  z-index: 9999; 
  border-radius: 10px;
  background: #ffffff;
   border: 1px solid #160b13;
  box-shadow: 2px 2px 9px black;
}

/*弹出框深色背景 */
.modal-mask{
  width: 100%;
  height: 100%;
