.slide-image {
  position: absolute;
  height: 225rpx;
  width: 570rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 13%;
  margin: 20rpx 20rpx;
  box-shadow: 3rpx 3rpx 20rpx rgb(54, 54, 54);
}

swiper {
  height: 430rpx;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 280rpx;
  width: 570rpx;
  top: 7%;
  transition: all 0.2s ease-in 0s;
}

.book_list{
  display: flex;
  flex-direction: row;
  background: #eee;
  /* border: 1px solid red; */
}

.box_box{
  width:100vw;
