.wbg{
  content: "";
  position: absolute;
  width: 120rpx;
  border-radius: 6rpx;
  height: 40rpx;
  background-color: #000;
  display: block;
  bottom: 37rpx;
  left: 30rpx;
  box-shadow: 0rpx 0rpx 12rpx #000;  
 
  opacity:0.5;
}
.cardTitle::before{
  content: "";
  position: absolute;
  width: 60rpx;
  height: 6rpx;
