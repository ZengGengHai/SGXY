.aa{
  box-shadow: 2rpx 3rpx 12rpx #5d5d5d;
  font-weight: bold
}
.image{
  width:100vw;
  height:100vh;
  position:fixed;
  filter: blur(20px);
  }
.scroll-y{
  height: 100vh;
  width:100vw;
}
.box{
  display:flex; 
  flex-direction:row;
  flex-wrap: wrap;
}
.image_box{
  height:340rpx;
  width:100%;
  margin:0 auto;
  border-radius:30rpx; 

}
.image_list{
  display:block;
  width:100%;
  height:260rpx;
  border-radius:15rpx 15rpx 0 0;
  background:#f6f6f6;
}
.text_box{
  background:#921616;
  display:block;
  height:100rpx;
  border-radius:0 0 15rpx 15rpx;
}
.text_title{
  font-size:28rpx;
  color:#fff;
  font-weight: bold;
  padding: 10rpx 0 5rpx 7rpx;
  text-align: center;
}
.introduct{
  font-size:24rpx;
  color:rgb(235, 235, 235);
  padding-left:7rpx;
  text-align: center;
}