/* pages/check_image/check_image.wxss */
/* 图片墙部分 */


.kind_style{
  width:100vw;
  position:fixed;
  height: 5vh;
  display: flex;
  flex-direction: row;
  color:#ffffff;
  font-size: 26rpx;
  font-weight: bold;
  line-height: 50rpx;
  text-align: center;
  z-index:9999;
}
.kind_style .kind_box{
  width:33%;

  z-index:999;
                      
  /* 根据数量来改变width */
}
.kind_style .kind_box .kind_name{
  width:200rpx;
  margin:0 auto;
  z-index:999;

}


.kind_bottom{
border-bottom: 0rpx solid #ffffff;

}
.kind_bottom_hover{
  border-bottom:3px solid #ffffff;

}


.box{                     

  padding:10rpx 0 0 0;
  width:100%;
  margin:0rpx;
  border: 0;

}
.img_item{

    display: inline-block;
    vertical-align: top;
    
   

    
}
.img_item_left{
     width: 46.25%; 
     margin-left:2.5%;
     margin-right:1.25%;    
     
}
.img_item_right{
    width: 46.25%; 
    margin-left:1.55%;
    margin-right:2.0%;

    
}
.img_item image{
    box-shadow: 3.5rpx 3.5rpx 5px #292929;  
    position: relative;
    margin:3% 0 0rpx 0;
   
}
.image_box{
  border:0rpx solid black;

}

.next_word{
  width:100%;
  height:40rpx;
  font-size:24rpx;
  text-align: center;
  margin:60rpx 0;

}





.modal-mask{  /*遮罩*/
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.466);
  z-index: 9000;
  color: #fff;
}



.modal-dialog{
  width:300rpx;
  /* height:100rpx;
   */
  padding:15rpx;
  background: #fff;
  margin:45vh auto;
  opacity: 1;
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  justify-content: space-around ;
}
.function{
  width:50%;
  display: flex;
  flex-direction: row;
  justify-content: center;

  
}
.icon{
  height:60rpx;
  width:60rpx;

}

